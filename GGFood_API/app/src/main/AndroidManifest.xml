        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".IceBoxAddActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tool.CapturedActivityImpl"
            android:screenOrientation="portrait" />


        <activity android:name=".Register" />
        <activity android:name=".Search" />
        <activity android:name=".PreviewRecipe" />
        <activity android:name=".PreviewOrder" />
        <service android:name=".STTService" />
        <activity
            android:name=".Teaching"
            android:screenOrientation="portrait" />
        <activity android:name=".ShowOrder"></activity>
    </application>

</manifest>